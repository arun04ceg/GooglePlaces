package Query;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.HashMap;
import java.util.List;

import DataBinders.SearchResultSet;
import Http.Http;
import JSONParsers.ParseTextSearch;

public class Search {

	public SearchResultSet search(String SearchType, HashMap<String, String> params) throws Exception {
		Http http = new Http();
		String data = http.getData(SearchType, params);
		
		/*
		 * Check Validity of required parameters
		 */
		List<String> requiredParams = new ArrayList<String>(Arrays.asList("query", "key", "sensor"));
		
		for(String param : requiredParams) {
			if (!params.containsKey(param)) {
				throw new Exception("Missing Required param: " + param);
			}
		}
		
		SearchResultSet result = ParseTextSearch.parse(data);
		return result;
	}
}
